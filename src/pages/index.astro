---
import Layout from '~/layouts/PageLayout.astro';

import Header from '~/components/widgets/Header.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import Content from '~/components/widgets/Content.astro';
import Footer from "~/components/widgets/Footer.astro";

import { headerData } from '~/data';

const meta = {
  title: 'Rosso Consulting',
};
---

<Layout {meta}>
  <Fragment slot="header">
    <Header
      {...headerData}
      actions={[
        {
          type: "ghost",
          text: 'Login',
          href: '#',
        },
        {
          type: "primary",
          text: 'Sign Up',
          href: '#',
        },
      ]}
      isSticky
    />
  </Fragment>

  <!-- Hero2 Widget ******************* -->

  <Hero2
    callToAction={{ text: 'Contact Us', href: 'mailto:info@rossoconsulting.com', icon: 'tabler:mail' }}
    callToAction2={{ text: 'Learn more', href: '#features' }}
    image={{ src: import('~/assets/images/hero.jpg'), alt: 'Hero Image' }}
  >
    <Fragment slot="title">
      Rosso Consulting
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
       Portsmouth, Virginia | Veteran Owned</span><br />
       <br />
        Rosso Consulting takes the Risk Management Framework process based on existing standards, guidelines, and practices for organizations to better manage and reduce cybersecurity risk.
    </Fragment>
  </Hero2>

  <!-- Content Widget **************** -->

  <Content
    isReversed
    items={[
      {
        title: 'Rosso Consulting customizes the RMF Framework to best suit your risks, situations, and needs.',
        description:
          'Most Projects have unique risks – different threats, different vulnerabilities, different risk tolerances – and how they implement the practices in the Framework to achieve positive outcomes will vary.',
      },
      {
        title: 'Rosso Consulting takes the Framework and implements customized checklists approach for all critical infrastructure, Applications or Systems.',
        description:
          'We help your project manage and reduce risks, and foster risk and cybersecurity management communications amongst both internal and external organizations.',
      },
      {
        title: 'The goal is to be authorized to operate securely with minimized risk and we make it happen.',
        description:
          '',
      },
    ]}
    image={{
      src: import('~/assets/images/team.jpg'),
      alt: 'Colorful Image',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">We specialize in Department of the Navy Certifications.</h3>
      <a id="features">Our</a> staff is made up of Subject Matter Experts (SME) in all areas of RMF/Testing and the process.
    </Fragment>
  </Content>

  <Footer>
    
  </Footer>

</Layout>
